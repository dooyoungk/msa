<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dackdoo.frontend.webclient.mapper.BoardMapper">
    <select id="findAll" resultType="com.dackdoo.frontend.webclient.dto.BoardDto">
        SELECT ID
             , TITLE
             , REG_DT
        FROM BOARD
        ORDER BY ID DESC
    </select>

    <select id="findById" parameterType="int" resultType="com.dackdoo.frontend.webclient.dto.BoardDto">
        SELECT ID
             , TITLE
             , CONTENTS
             , REG_DT
             , UPD_DT
        FROM BOARD
        WHERE ID = #{id}
    </select>

    <insert id="save" parameterType="com.dackdoo.frontend.webclient.dto.BoardDto"
            useGeneratedKeys="true" keyProperty="id">
        INSERT
        INTO BOARD (TITLE
                   , CONTENTS
                   , REG_DT)
        VALUES (#{title}
               , #{contents}
               , NOW())
    </insert>

    <update id="update" parameterType="com.dackdoo.frontend.webclient.dto.BoardDto">
        UPDATE BOARD
        SET TITLE = #{title}
          , CONTENTS = #{contents}
          , UPD_DT = NOW()
        WHERE ID = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE
        FROM BOARD
        WHERE ID = #{id}
    </delete>
</mapper>